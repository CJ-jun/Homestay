/**index.wxss**/
page{
  background: #f0f0f0;
}
.section{
  width: 100%;
}
.searchBar{
  display: flex;
  justify-content: center;
  height: 100rpx;
  background: #f0f0f0;
}
.searchBar .searBar-box{
  display: inline-block;
  width: 95%;
  height: 60rpx;
  margin-top: 26rpx;
  border-radius: 40rpx;
  background: #fff;
}
.searBar-box.tap{
  background: rgba(255,247,231,.9);
}
.search-plac{
  text-align: center;
  font-size: 11pt;
  margin-top: 4rpx;
}
.searBar-box .search-icon{
  position: absolute;
  left: 36%;
  top: 35rpx;
  width: 44rpx;
  height: 44rpx;
}

/* 轮番图 */

.section-swiper .slide{
  width: 100%;
  height: 380rpx;
}
.section-swiper .slide-image{
  width: 100%;
  height: 100%;
  display: block;
}

/* 分类栏 */
.navBar{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 160rpx;
  background: #fff;
}
.nav-list{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-item{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  margin: 0 36rpx;
}
.nav-item .item-img{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
}
.nav-item .item-text{
  font-size: 26rpx;
  color:#999;
}


/* 菜式栏 */
.recommend-menu{
  margin: 20rpx;
}
.recommend-title{
  display: flex;
  flex-direction: column;
}
/* justify-content 属性定义了浏览器之间，如何分配顺着弹性容器主轴(或者网格行轴) 的元素之间及其周围的空间。 */
.recommend-title text{
  justify-content: center;
  display: flex;
}
.recommend-title .recommend-text1{
  color:#41ADBD;
  font-size: 40rpx;
}
.recommend-title .recommend-text2{
    color: rgb(250, 172, 4);
    font-size: 28rpx;
}
.recommend-veget{
  display: flex;
  margin: 20rpx 0;
}
/* white-space:规定段落中的文本不进行换行 */
.scroll-view{
  width: 100%;
  white-space: nowrap;
}
.scroll-view-item{
  width: 350rpx;
  height: 100px;
  display: inline-block;
}
.scroll-view-item image{
  width: 95%;
  height: 240rpx;
  border-radius: 5rpx;
  border-color: red;
}

