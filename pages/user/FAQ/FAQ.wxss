/* pages/user/FAQ/FAQ.wxss */
/* 常见问题 */

/* --start-- */
.FAQ-view {
  background: #f0f0f0;
}

/* 小顽妹描述 */
.user-hello-view {
  width: 100%;
  display: flex;
  justify-content: center;
}
.user-hello {
  font-size: 28rpx;
  width: 70%;
  line-height: 40rpx;
  margin-top: 20rpx;
}

/* 问题item */
.question-item {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #dad9d9;
  font-size: 32rpx; 
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}
/* 提问内容 */
.question-content {
   display: flex;
   flex-direction: row;
   margin-right: 30rpx;
}
.question-icon-Q {
  background-color: #41adbd;
  width: 60rpx;
  height: 52rpx;
  text-align: center;
  border-radius: 12rpx;
  padding-top: 5rpx;
  margin: 30rpx;
  color: #fff;
}
.question-content-title {
  width: 85%;
  margin-top: 30rpx;
}
/* 回答内容 */
.answer-content {
 display: flex;
 flex-direction: row;
 margin-right: 30rpx;
 width: 80%;
 margin-left: 100rpx;
}
.answer-icon-A {
  background-color: #e24e54;
  width: 60rpx;
  height: 52rpx;
  text-align: center;
  border-radius: 12rpx;
  margin: 20rpx;
  padding-top: 10rpx;
  color: #fff;
}
.answer-content-text {
  width: 85%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

/* 拨打客服电话 */
.telephone-view {
  text-align: center;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}
.telephone-text {
  font-size: 32rpx;
}
.telephone-number {
  font-size: 46rpx;
  color: #4bb1c0;
  margin-top: 30rpx;
}
/* --end-- */
