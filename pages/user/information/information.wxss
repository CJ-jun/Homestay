/* pages/user/information/information.wxss */
/* 个人资料 */
/* --start-- */
.user-information {
  position: fixed;
  height: 100%;
  width: 100%;
  background-color: #f0f0f0;
}
.user-information-body {
  margin-top: 80rpx;
}
.flex-view {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin-bottom: 5rpx;
  line-height: 100rpx;
  padding: 10rpx 50rpx;
  position: relative;
  font-size: 32rpx;
  text-align: right;
}
.flex-view input {
  vertical-align: middle;
  width: 100%;
  height: 100rpx;
}
.input-content-fender {
  padding-right: 30rpx;
}
/* 头像 */
.user-head image {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 0;
  margin-right: 50rpx;
}

/* 昵称 */
.user-nickname-text {
  position: fixed;
  right: 0;
  margin-right: 50rpx;
}

.information-btn{
  display: flex;
  justify-content: center;
  background-color: #54BF6C;
  color: #ffffff;
  padding: 20rpx 0;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
/* --end-- */